<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/background_clear"
    android:id="@+id/stations_list_layout">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/station_row">

        <FrameLayout
            android:layout_width="179dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left"
            android:id="@+id/LeftSide"
            android:paddingLeft="1dp">

            <TextView
                android:id="@+id/stationNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="Stacja:"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="left|top" />

            <TextView
                android:id="@+id/availableDocksLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00FF1A"
                android:text="Miejsca"
                android:layout_gravity="left|center_vertical"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/statusValueLabel"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="#FFFFFF"
                android:text="Status:"
                android:layout_gravity="left|bottom" />

            <TextView
                android:id="@+id/availableBikesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rowery"
                android:textColor="#ff0000"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="179dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:id="@+id/RightSide"
            android:paddingRight="1dp">

            <TextView
                android:id="@+id/availableDocks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00FF1A"
                android:text="30"
                android:layout_gravity="left|center_vertical"
                android:textSize="20dp"                />

            <TextView
                android:id="@+id/availableBikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textColor="#ff0000"
                android:layout_gravity="center"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/stationName"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="ElizÃ³wka"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="left|top" />

            <TextView
                android:id="@+id/statusValue"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textColor="#FFFFFF"
                android:text="In Service"
                android:layout_gravity="left|bottom" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>